@{Layout = "/Shared/Layout.cshtml";}

@section CustomStyles {
    <style type="text/css">
        body {
            background-image: url("/img/bg_blue_hands_light.jpg");
        }
        div.close {
            display: none;
        }
    </style>
    <!--[if lt IE 9]>
